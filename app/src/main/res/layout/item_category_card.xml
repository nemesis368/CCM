<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agendar Nueva Cita"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:padding="8dp"
        android:background="@drawable/text_background" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Qué servicio necesitas?"
        android:layout_marginBottom="4dp"
        android:textStyle="italic" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Selecciona un servicio"
        android:drawableEnd="@android:drawable/arrow_down_float"
        android:padding="10dp"
        android:background="@drawable/dropdown_background"
        android:layout_marginBottom="24dp"
        android:focusable="false"
        android:clickable="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige el día"
        android:layout_marginBottom="4dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="[ Simulación de Calendario: Diciembre 1969 ]\n\n(Este componente requiere un widget específico \ncomo CalendarView o una implementación personalizada.)"
        android:gravity="center"
        android:background="#F0F0FF"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:textColor="#333333" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horarios disponibles"
        android:layout_marginBottom="8dp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_marginBottom="32dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00 AM"
            android:backgroundTint="#CCCCCC"
            android:textColor="#000000"
            android:layout_marginEnd="8dp"
            style="?attr/materialButtonOutlinedStyle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:30 AM"
            android:backgroundTint="#CCCCCC"
            android:textColor="#000000"
            android:layout_marginEnd="8dp"
            style="?attr/materialButtonOutlinedStyle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:00 AM"
            android:backgroundTint="#E0E0E0"
            android:textColor="#999999"
            android:layout_marginEnd="8dp"
            style="?attr/materialButtonOutlinedStyle"
            android:enabled="false" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="CONFIRMAR CITA"
        android:textColor="#FFFFFF" />

</LinearLayout>