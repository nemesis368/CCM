<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F8"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="24dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_psychology_person"
                    android:contentDescription="Icono de paciente de psicología" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tv_nombre_paciente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KA MONROY"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/tv_edad_paciente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edad: 23 años"
                        android:textSize="16sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tv_contacto_paciente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tel: 56 4574 6287"
                        android:textSize="16sp"
                        android:textColor="#666666"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_history"
                            android:contentDescription="Icono de historial" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Historial de Sesiones"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar_event"
                            android:contentDescription="Icono de última cita" />

                        <TextView
                            android:id="@+id/tv_ultima_sesion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Última sesión: 10 de octubre de 2025"
                            android:textSize="16sp"
                            android:textColor="#555555"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_therapy"
                            android:contentDescription="Icono de enfoque de terapia"/>

                        <TextView
                            android:id="@+id/tv_enfoque_terapia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enfoque actual: Terapia Cognitivo-Conductual"
                            android:textSize="16sp"
                            android:textColor="#555555"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <Button
                            android:id="@+id/btn_editar_historial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EDITAR"
                            android:textColor="#8E24AA"
                            android:background="@android:color/transparent"/>

                        <Button
                            android:id="@+id/btn_ver_sesiones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver Sesiones"
                            android:textColor="@android:color/white"
                            android:backgroundTint="#8E24AA"
                            app:cornerRadius="8dp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bienestar Emocional General"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:paddingBottom="12dp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/progress_circle_75_percent_lila"
                            android:layout_gravity="center"
                            android:contentDescription="Indicador de bienestar emocional"/>

                        <TextView
                            android:id="@+id/tv_porcentaje_bienestar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75%"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#8E24AA"
                            android:layout_gravity="center"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_notas_bienestar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notas: Foco en técnicas de relajación y gestión del estrés. Sesiones semanales."
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:id="@+id/layout_metas_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_calendario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        app:srcCompat="@drawable/ic_calendar_event"
        app:backgroundTint="#2962FF"
        app:tint="#000000"
        app:elevation="6dp"
        android:contentDescription="Calendario" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>