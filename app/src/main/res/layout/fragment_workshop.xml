<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@android:drawable/ic_menu_slideshow"
            app:tint="@color/ccm_workshop"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvWorkshopTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Taller"
            android:textColor="@color/ccm_workshop"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del curso."
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="HORARIOS FIJOS"
                    android:textColor="@color/ccm_workshop"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvSchedule"
                    android:text="Lunes y Miércoles: 4 PM"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btnInscribir"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="SOLICITAR INSCRIPCIÓN"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/ccm_workshop"/>
    </LinearLayout>
</ScrollView>